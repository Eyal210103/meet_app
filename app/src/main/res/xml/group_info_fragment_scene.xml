<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">
<!--        <Constraint-->
<!--            motion:layout_constraintEnd_toEndOf="parent"-->
<!--            android:id="@+id/constraintLayout4" />-->
<!--        <Constraint-->
<!--            motion:layout_constraintBottom_toBottomOf="@+id/group_info_group_civ"-->
<!--            android:id="@+id/constraintLayout5" />-->
        <Constraint
            android:id="@+id/group_info_group_name"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/group_info_group_civ"
            motion:layout_constraintBottom_toBottomOf="@+id/group_info_group_civ"
            motion:layout_constraintStart_toEndOf="@+id/group_info_group_civ">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="14sp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/group_info_group_civ"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="32dp" />
        <Constraint
            android:id="@+id/group_info_group_name"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/group_info_group_civ"
            motion:layout_constraintBottom_toBottomOf="@+id/group_info_group_civ"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toEndOf="@+id/group_info_group_civ"
            android:layout_marginStart="0dp"
            android:scaleX="0.6"
            android:scaleY="0.6">
        </Constraint>
        <Constraint
            android:id="@+id/group_info_subject_imageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="@+id/group_info_group_name"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp" />
    </ConstraintSet>

</MotionScene>