<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_app_design"
    android:backgroundTint="@color/backgroundSec"
    android:orientation="vertical"
    android:paddingHorizontal="50dp"
    android:gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/join_group_dialog_civ"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/groups_subjects"
        app:civ_border_color="@color/background"
        app:civ_border_width="0.5dp" />

    <TextView
        android:id="@+id/join_group_dialog_name_textView"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/oppBackground"
        android:text="@string/app_name"
        android:textSize="30sp" />

    <Button
        android:id="@+id/join_group_dialog_join_button"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/main_app_design"
        android:textColor="@color/oppBackground"
        android:backgroundTint="@color/background"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/join"/>
</LinearLayout>