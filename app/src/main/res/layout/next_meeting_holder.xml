<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="160dp"
    android:background="@drawable/main_app_design"
    android:paddingBottom="5dp"
    android:backgroundTint="@color/blue">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/calendar_150"
        app:tint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_dash_day_of_month_textView"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:fontFamily="@font/archivo_black"
        android:text="24"
        android:textSize="42sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_dash_month_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:text="July"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/group_dash_day_of_month_textView"
        app:layout_constraintStart_toStartOf="@+id/group_dash_day_of_month_textView"
        app:layout_constraintTop_toBottomOf="@+id/group_dash_day_of_month_textView" />

    <TextView
        android:id="@+id/group_dash_hour_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21:00"
        android:textSize="30sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/group_dash_meeting_location_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:text="DESCRIPTDESTDESTDESCRIPTDESTDESTDESCRIPTDESTDEST"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/group_dash_subject_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/groupsicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/group_dash_meeting_location_textView"
        app:layout_constraintStart_toStartOf="@+id/group_dash_meeting_location_textView"
        app:layout_constraintTop_toBottomOf="@+id/group_dash_meeting_location_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>